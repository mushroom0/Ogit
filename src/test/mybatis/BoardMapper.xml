<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="getList" resultType="boardDto">
		SELECT 	num,writer,title,content,TO_CHAR(regdate, 'YYYY.MM.DD AM HH:MI') regdate
		FROM 	board_guest
		ORDER BY num ASC
	</select>
	
	<select id="getData" parameterType="int" resultType="boardDto">
		SELECT 	num,writer,title,content,TO_CHAR(regdate, 'YYYY.MM.DD AM HH:MI') regdate
		FROM 	board_guest
		WHERE 	num=#{num}
	</select>
	
	<insert id="insert" parameterType="boardDto">
		INSERT 	INTO board_guest
		(num,writer,title,content,regdate)
		VALUES(board_guest_seq.NEXTVAL,#{writer},#{title},#{content},SYSDATE)
	</insert>
	
	<update id="update" parameterType="boardDto">
		UPDATE 	board_guest
		SET 	writer=#{writer},title=#{title},content=#{content}
		WHERE 	num=#{num}
	</update>
</mapper>








